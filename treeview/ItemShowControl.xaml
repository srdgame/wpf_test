<UserControl x:Class="treeview.ItemShowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:treeview"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBox Height="23" TextWrapping="Wrap" Text="{Binding Path=DisplayName}"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="{Binding Path=Tips}"/>
            <Image Height="32" Source="{Binding Path=Icon}"/>
            <Image Height="32" Source="{Binding Path=AddIcon}"/>
            <Image Height="32" Source="{Binding Path=EditIcon}"/>
            <Image Height="32" Source="{Binding Path=DeleteIcon}"/>
            <Button x:Name="button" Content="Button" Click="button_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
