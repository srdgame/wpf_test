<Window x:Class="binding_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:binding_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <local:UserControl1 x:Name="userCtrl" HorizontalAlignment="Left" VerticalAlignment="Top" TestValue="{Binding Test, Mode=TwoWay}"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="112,86,0,0" VerticalAlignment="Top" Width="115" Click="button_Click" Height="97"/>

    </Grid>
</Window>
